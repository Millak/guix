msgstr "Choisit le serveur d'affichage à utiliser pour l'écran d'accueil.  Les valeurs valides sont @samp{\"x11\"} ou @samp{\"wayland\"}."

msgid "@code{numlock} (default: \"on\")"
msgstr "@code{numlock} (par défaut : \"on\")"

