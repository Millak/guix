#: guix-git/doc/guix-cookbook.texi:2303
#, no-wrap
msgid ""
"(use-modules (gnu))\n"
"(use-service-modules desktop)\n"
"(use-package-modules vpn)\n"
"\n"
msgstr ""
"(use-modules (gnu))\n"
"(use-service-modules desktop)\n"
"(use-package-modules vpn)\n"
"\n"

#. type: lisp
#: guix-git/doc/guix-cookbook.texi:2312
#, no-wrap
