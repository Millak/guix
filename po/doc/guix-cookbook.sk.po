#: guix-git/doc/guix-cookbook.texi:3954
#, no-wrap
msgid "IPv4-Gateway"
msgstr ""

#. type: var{#1}
#: guix-git/doc/guix-cookbook.texi:3956
msgid "server-ip"
msgstr ""

#. type: item
#: guix-git/doc/guix-cookbook.texi:3956
#, no-wrap
msgid "Route type"
msgstr ""

