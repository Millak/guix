"               (let* ((cmd\n"
"                       \"set -eux\n"
"c=0\n"
"while ! /run/setuid-programs/ping -qc1 -W1 example.org; do\n"
"\tsleep 1\n"
"\t[ \\\"$((c += 1))\\\" -lt 30 ] || exit 1  # Limit the wait time\n"
"done\n"
"\")\n"
"                    (status (system cmd)))\n"
