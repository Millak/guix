msgid "$ git send-email --annotate -1\n"
msgstr "$ git send-email --annotate -1\n"

#. type: quotation
#: guix-git/doc/contributing.texi:2119 guix-git/doc/guix.texi:10701
#: guix-git/doc/guix.texi:21072 guix-git/doc/guix.texi:21080
#: guix-git/doc/guix.texi:36238
#, fuzzy, no-wrap
