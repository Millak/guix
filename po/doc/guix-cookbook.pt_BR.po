#: guix-git/doc/guix-cookbook.texi:3955
#, no-wrap
msgid "IPv4-Gateway"
msgstr "IPv4-Ponto de entrada"

#. type: var{#1}
#: guix-git/doc/guix-cookbook.texi:3957
msgid "server-ip"
msgstr "servidor-ip"

#. type: item
#: guix-git/doc/guix-cookbook.texi:3957
#, no-wrap
msgid "Route type"
msgstr "Tipo de rota"

