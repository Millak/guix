"    declare -f \"$name\" >> \"$target\" 2>/dev/null\n"
"    # Observe que adicionamos variáveis de shell ao gatilho da função.\n"
"    echo \"$name \\$*\" >> \"$target\"\n"
"    chmod +x \"$target\"\n"
"  fi\n"
"@}\n"
"\n"

