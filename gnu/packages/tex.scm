    ;; from `texlive-bin' source instead.
    (inherit texlive-libkpathsea)
    (name "texlive-xindy")
    (version (number->string %texlive-revision))
    (outputs '("out" "doc"))
    (build-system gnu-build-system)
    (arguments
     (substitute-keyword-arguments (package-arguments texlive-libkpathsea)
       ((#:out-of-source? _ #t) #t)
